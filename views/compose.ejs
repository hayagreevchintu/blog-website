<%- include('partials/header'); -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="title">Title</label><br>
            <input type="text" name="title" class="form-control" placeholder="Title for Blog Post" autocomplete="off"></textarea><br>
            <label for="post">Post</label><br>
            <textarea name="post" cols="100" rows="10" placeholder="Content for Blog Post" autocomplete="off" class="form-control"></textarea><br>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>
<%- include('partials/footer'); -%>